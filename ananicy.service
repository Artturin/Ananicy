[Unit]
Description=Ananicy - ANother Auto NICe daemon
After=local-fs.target

[Service]
Type=notify
ExecStart=/usr/bin/ananicy start
ExecReload=/usr/bin/ananicy reload
Nice=19
SuccessExitStatus=143
OOMScoreAdjust=-999
Restart=always
CPUAccounting=true
MemoryHigh=16M
MemoryMax=64M
ProtectSystem=true
ProtectHome=true
PrivateTmp=yes
CapabilityBoundingSet=CAP_SYS_NICE CAP_SYS_RESOURCE
AmbientCapabilities=CAP_SYS_NICE CAP_SYS_RESOURCE
NotifyAccess=all

[Install]
WantedBy=local-fs.target
